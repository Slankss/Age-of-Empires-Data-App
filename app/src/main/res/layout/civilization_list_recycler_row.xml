<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewCivilization"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardElevation="10dp"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtCivilizationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Aztek">

        </TextView>

        <ImageView
            android:id="@+id/imgFirstIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@+id/imgSecondIcon"
            >

        </ImageView>

        <ImageView
            android:id="@+id/imgSecondIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@+id/txtArmyType"
            >


        </ImageView>

        <TextView
            android:id="@+id/txtArmyType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/first_color"
            android:layout_marginEnd="5dp"
            android:text="Mong and archer"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
           >

        </TextView>

    </RelativeLayout>
    

    


</androidx.cardview.widget.CardView>